    "format": "prettier --check src",
    "format:fix": "prettier --write src"
  },
  "dependencies": {
    "@minify-html/node": "0.9.2",
    "globby": "13.1.2"
  },
  "devDependencies": {
    "@sondr3/eslint-config": "0.7.1",
