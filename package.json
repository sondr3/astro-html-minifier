{
  "name": "@sondr3/astro-minify",
  "version": "0.1.0",
  "description": "A minifier for HTML, CSS and JS for Astro",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sondr3/astro-minify.git"
  },
  "author": "Sondre Nilsen <sondre@eons.io> (https://www.eons.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sondr3/astro-minify/issues"
  },
  "homepage": "https://github.com/sondr3/astro-minify#readme",
  "prettier": "@sondr3/prettier",
  "keywords": [
    "astro",
    "astro-integration",
    "astro-component"
  ],
  "scripts": {
    "dev": "tsc --watch --incremental",
    "build": "tsc",
